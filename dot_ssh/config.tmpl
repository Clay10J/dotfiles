{{ if .sshAgent }}
# SSH Configuration
# This file is managed by chezmoi
# Only rendered on hosts with sshAgent = true (client workstations)

# Global settings with 1Password SSH agent
Host *
    ServerAliveInterval 60
    ServerAliveCountMax 3
    AddKeysToAgent yes
    IdentitiesOnly yes
    IdentityAgent ~/.1password/agent.sock

# GitHub
Host github.com
    HostName github.com
    User git
    IdentitiesOnly yes

# GitLab (uncomment if you use GitLab)
# Host gitlab.com
#     HostName gitlab.com
#     User git
#     IdentitiesOnly yes

# Pi-hole server
Host piholeio
    HostName {{ .servers.piholeio.sshHostName }}
    User {{ .servers.piholeio.sshUser }}
    IdentitiesOnly yes

# Unraid server
Host unraider
    HostName {{ .servers.unraider.sshHostName }}
    User {{ .servers.unraider.sshUser }}
    IdentitiesOnly yes

# Development servers
Host dev-*
    IdentitiesOnly yes

# Production servers
Host prod-*
    IdentitiesOnly yes
    ServerAliveInterval 30
    ServerAliveCountMax 6

# Local development (uncomment if you SSH to localhost)
# Host localhost
#     IdentitiesOnly yes
{{ end }} 